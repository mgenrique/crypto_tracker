# Database
DATABASE_URL=postgresql://user:password@localhost:5432/crypto_tracker
DATABASE_ECHO=False

# API
API_VERSION=3.0.0
API_TITLE=Crypto Portfolio Tracker
DEBUG=False
CORS_ORIGINS=*

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# JWT Auth
SECRET_KEY=your-super-secret-key-change-in-production

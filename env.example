# Crypto Portfolio Tracker v3
# Configuración de variables de entorno
# Copia este archivo como .env y completa con tus datos

# ============================================================================
# WALLETS - Direcciones de tus wallets
# ============================================================================
WALLET_MAIN=0x1234567890abcdef1234567890abcdef12345678
WALLET_TRADING=0xabcdef1234567890abcdef1234567890abcdef12
WALLET_YIELD=0xfedcba0987654321fedcba0987654321fedcba09

# ============================================================================
# BINANCE - Credenciales de API
# ============================================================================
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_API_SECRET=your_binance_api_secret_here
BINANCE_TESTNET=false

# ============================================================================
# COINBASE - Credenciales de API
# ============================================================================
COINBASE_API_KEY=your_coinbase_api_key_here
COINBASE_API_SECRET=your_coinbase_api_secret_here
COINBASE_PASSPHRASE=your_coinbase_passphrase_here

# ============================================================================
# KRAKEN - Credenciales de API
# ============================================================================
KRAKEN_API_KEY=your_kraken_api_key_here
KRAKEN_API_SECRET=your_kraken_api_secret_here

# ============================================================================
# BLOCKCHAIN RPC URLs - Para leer datos on-chain
# ============================================================================
ETHEREUM_RPC_URL=https://eth-mainnet.alchemyapi.io/v2/YOUR_ALCHEMY_KEY
ARBITRUM_RPC_URL=https://arb-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_KEY
BASE_RPC_URL=https://base-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_KEY
POLYGON_RPC_URL=https://polygon-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_KEY
OPTIMISM_RPC_URL=https://opt-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_KEY
AVALANCHE_RPC_URL=https://avax-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_KEY
SOLANA_RPC_URL=https://solana-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_KEY
BITCOIN_RPC_URL=http://localhost:8332

# ============================================================================
# COINGECKO - API para precios
# ============================================================================
COINGECKO_API_KEY=your_coingecko_api_key_here
COINGECKO_DEMO=false

# ============================================================================
# DATABASE - Configuración de BD
# ============================================================================
DATABASE_PATH=./data/crypto_portfolio.db
DATABASE_BACKUP_PATH=./data/backups/
DATABASE_TIMEOUT=30

# ============================================================================
# LOGGING - Configuración de logs
# ============================================================================
LOG_LEVEL=INFO
LOG_FILE=./logs/crypto_tracker.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5

# ============================================================================
# NOTIFICACIONES - Canales de notificación (opcional)
# ============================================================================
DISCORD_WEBHOOK_URL=https://discordapp.com/api/webhooks/YOUR_WEBHOOK_ID/YOUR_WEBHOOK_TOKEN
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here
EMAIL_SENDER=your_email@gmail.com
EMAIL_PASSWORD=your_app_password_here

# ============================================================================
# APLICACIÓN - Configuración general
# ============================================================================
APP_NAME=Crypto Portfolio Tracker
APP_VERSION=3.0
DEBUG=false
ENVIRONMENT=production

# ============================================================================
# SYNC - Configuración de sincronización
# ============================================================================
SYNC_INTERVAL_MINUTES=15
PRICE_UPDATE_INTERVAL_MINUTES=5
SNAPSHOT_INTERVAL_HOURS=24

# ============================================================================
# THRESHOLDS - Umbrales de alertas
# ============================================================================
HEALTH_FACTOR_WARNING=1.5
HEALTH_FACTOR_CRITICAL=1.2
PRICE_CHANGE_ALERT_PERCENT=10

# ============================================================================
# NOTAS IMPORTANTES
# ============================================================================
# - NUNCA compartas este archivo .env
# - Asegúrate que .env está en .gitignore
# - Usa claves de API con permisos limitados
# - Para Alchemy, obtén clave en: https://www.alchemy.com/
# - Para CoinGecko, obtén clave en: https://www.coingecko.com/en/api
